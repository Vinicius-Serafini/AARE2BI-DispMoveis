<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoFgts">

    <TextView
        android:id="@+id/tvPParcela"
        android:layout_width="400sp"
        android:layout_height="80sp"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSParcela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <TextView
        android:id="@+id/tvSParcela"
        android:layout_width="400sp"
        android:layout_height="80sp"
        android:layout_marginBottom="64dp"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tvTParcela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTParcela"
        android:layout_width="400sp"
        android:layout_height="80sp"
        android:layout_marginBottom="232dp"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primeira parcela:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPParcela"
        app:layout_constraintStart_toStartOf="@+id/tvPParcela" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segunda parcela:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSParcela"
        app:layout_constraintStart_toStartOf="@+id/tvSParcela" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terceira parcela:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvTParcela"
        app:layout_constraintStart_toStartOf="@+id/tvTParcela" />
</androidx.constraintlayout.widget.ConstraintLayout>